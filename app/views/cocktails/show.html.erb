<div class="div-center">

	<h2><%= @cocktail.name %></h2>

	<div>
	  <%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>
	</div>

	<% @doses.each do |dose| %>
	  <li>
	    <%= dose.ingredient.name %>: <%= dose.description %>
	    <%= link_to 'Delete', dose_path(dose),
	        method: :delete,
	        data: { confirm: "Delete this dose?" },
	        class: ""
	    %>
	  </li>

	<% end %>

	<br><br>
	<p><%= link_to 'Add dose', new_cocktail_dose_path(@cocktail), class: "btn btn-primary" %></p>
	<p><%= link_to 'Back', '/', class: "btn btn-primary" %></p>

</div>