<div class="div-center">

	<h2><%= @cocktail.name %></h2>

	<div>
	  <%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>
	</div>
	<table style="margin-top: 15px">
		<% @doses.each do |dose| %>
		  <tr>
		  	<td>
		      <strong><%= dose.ingredient.name %></strong>: <%= dose.description %>
		  	</td>
		  	<td>
			    &nbsp;<%= link_to dose_path(dose), method: :delete, data: { confirm: "Delete this dose?" } do %>
		          <i class="fas fa-trash-alt"></i>
		        <% end %>
		  	</td>
		  </tr>
		<% end %>
	</table>
	<br><br>
	<p><%= link_to 'Add dose', new_cocktail_dose_path(@cocktail), class: "btn btn-primary" %></p>
	<p><%= link_to 'Back', '/', class: "btn btn-primary" %></p>

</div>